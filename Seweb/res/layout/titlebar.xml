<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >

	    	<TextView
	    	    android:id="@+id/projectName"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:text ="@string/app_name"
  				android:gravity="center_vertical"
  				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true" 
				android:padding="8dip" 
				android:layout_margin="5dip"
				android:textColor="@color/light_grey"
  			/>

	    	<TextView
	    	    android:id="@+id/userStatusText"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:singleLine="true"
	    	    android:ellipsize="end"
	    	    android:maxLength="12"
	    	    android:layout_margin="5dip"
	    	    android:layout_toLeftOf="@+id/userStatusIcon"
	    	    android:gravity="center_vertical"
	    	    android:padding="8dip"
	    	    android:textColor="@color/light_grey" />
	    	
	    	<ImageView
	    	    android:id="@+id/userStatusIcon"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_centerVertical="true"
	    	    android:padding="5dip"
	    	    android:src="@drawable/user_offline"
	    	    android:layout_toLeftOf="@+id/titleBarMenuIcon"
	    	 />

	    	<ImageView
	    	    android:id="@+id/titleBarMenuIcon"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_alignParentTop="true"
	    	    android:layout_centerVertical="true"
	    	    android:layout_alignParentRight="true"
	    	    android:paddingBottom="5dip"
    			android:paddingLeft="9dip"
    			android:paddingRight="9dip"
    			android:paddingTop="5dip"
	    	    android:src="@drawable/titlebar_menu" />

	</RelativeLayout>
	
	<View
  		android:layout_width="fill_parent"
  		android:layout_height="2dp"
  		android:background="@color/light_blue"
	/>
</LinearLayout>

